<tal:logo xmlns:tal="http://xml.zope.org/namespaces/tal"
          xmlns:ajax="http://namesspaces.bluedynamics.eu/ajax"
          omit-tag="True">

  <a href="${request.application_url}"
     class="navbar-brand d-none d-sm-inline-block"
     ajax:bind="click"
     ajax:target="${request.application_url}"
     ajax:event="contextchanged:#layout"
     ajax:path="href">

    <img class="logo" src="static/images/cone-logo-cone.svg">
    <span class="d-none d-lg-inline-block"
          tal:content="model.root.metadata.title">
      Cone
    </span>
  </a>

</tal:logo>
