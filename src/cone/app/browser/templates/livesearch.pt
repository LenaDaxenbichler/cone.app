<tal:search xmlns:tal="http://xml.zope.org/namespaces/tal"
            xmlns:i18n="http://xml.zope.org/namespaces/i18n"
            i18n:domain="cone.app"
            omit-tag="True">

  <div id="cone-searchbar">
    <div class="input-group">

      <input type="text"
             class="form-control"
             id="search-text"
             name="term"
             placeholder="search database ..."
             i18n:attributes="placeholder search_database">

      <div class="input-group-append">
        <button type="submit" id="searchbar-button">
          <i class="bi-search"></i>
        </button>
      </div>

    </div>

    <div class="cone-dropdown-menu" id="cone-livesearch-dropdown">
        <p>Search Results</p>
        <ul>
          <li>
            <span>3</span>
          </li>

          <li>
            <span>3</span>
          </li>

          <li>
            <span>3</span>
          </li>
        </ul>
      </div>
  </div>


</tal:search>
