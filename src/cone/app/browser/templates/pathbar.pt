<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:ajax="http://namesspaces.bluedynamics.eu/ajax"
           xmlns:i18n="http://xml.zope.org/namespaces/i18n"
           i18n:domain="cone.app"
           omit-tag="True">



  <div class="breadcrumb bg-transparent">

    <li class="me-auto">
      <h2 class="p-0 m-0" >Page Title</h2>
    </li>

    <ol class="breadcrumb bg-transparent float-end" 
        id="pathbar"
        ajax:bind="contextchanged"
        ajax:action="pathbar:#pathbar:replace">

        <tal:li repeat="item context.items">
        
          <li tal:attributes="class item['selected'] and 'breadcrumb-item active' or 'breadcrumb-item'"
              tal:condition="not item['selected']">
            <a href="${item['url']}"
               ajax:bind="click"
               ajax:target="${item['target']}"
               ajax:event="contextchanged:#layout"
               ajax:path="href"
               tal:content="item['title']">
              Title
            </a>
          </li>

          <li class="breadcrumb-item active" 
              tal:content="item['title']"
              tal:condition="item['selected']">
              Title
          </li>

        </tal:li>

    </ol>

  </div>


</tal:block>