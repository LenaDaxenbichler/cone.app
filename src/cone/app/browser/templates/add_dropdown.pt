<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:ajax="http://namesspaces.bluedynamics.eu/ajax"
           xmlns:i18n="http://xml.zope.org/namespaces/i18n"
           i18n:domain="cone.app"
           omit-tag="True">

    <span class="add_dropdown">
      <button class="btn btn-small">
        <i class="toolbaricon-add"></i>Add
        <span class="caret"></span>
      </button>
    </span>
    <ul class="dropdown_items dropdown-menu">
      <li tal:repeat="item context.items">
        <a href="${item.url}"
           ajax:bind="click"
           ajax:target="${item.target}"
           ajax:action="add:#content:inner">
          <i class="${item.icon}"></i>
          <tal:title replace="item.title" />
        </a>
      </li>
    </ul>

</tal:block>
