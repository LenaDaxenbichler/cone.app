<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:ajax="http://namesspaces.bluedynamics.eu/ajax"
           omit-tag="True">

  <ul id="navtree"
       ajax:bind="contextchanged"
       ajax:action="navtree:#navtree:replace">

    <li class="sidebar-heading" id="navtree-heading">
      <span tal:content="context.title">
        Navigation
      </span>
      <i class="dropdown-arrow bi bi-chevron-down"></i>
    </li>

    <div id="navtree-content">
      <tal:tree replace="structure context.rendertree(context.navtree()['children'])" />
        <li class="navtreelevel_1">
          <a>
            <i class="bi bi-heart"></i>
              <span>This is a test to see if it works! Trolololololo</span>
          </a>

          <ul>
            <li class="navtreelevel_2">
              <a>
                <i class="bi bi-kanban" alt="..."></i>
                <span> Oh yeet. </span>
              </a>
            </li>
          </ul>

      </li>
    </div>
  </ul>



</tal:block>