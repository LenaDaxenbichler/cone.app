<tal:toolbar_top xmlns:tal="http://xml.zope.org/namespaces/tal"
                 xmlns:ajax="http://namesspaces.bluedynamics.eu/ajax"
                 omit-tag="True">

  <ul id="toolbar-top">

    <li class="dropdown" id="language">
      <img class="dropdown-toggle" role="button" data-bs-toggle="dropdown" src="/static/images/flags/gb.svg" height="15em">
      <ul class="dropdown-menu dropdown-menu-end">
        <li class="toolbar-title">Language</li>
        <li>
          <a href="#">
            <img src="/static/images/flags/fr.svg" height="15em">
            <span>French</span>
          </a>
          </li>
         <li>
          <a href="#">
            <img src="/static/images/flags/de.svg" height="15em">
            <span>German</span>
          </a>
        </li>
        <li>
          <a href="#">
            <img src="/static/images/flags/it.svg" height="15em">
            <span>Italian</span>
          </a>
        </li>
      </ul>
    </li>

    <li class="dropdown" id="notifications">
      <i class="dropdown-toggle bi bi-bell-fill" role="button" data-bs-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-end">
        <li class="toolbar-title">Notifications</li>

        <li class="notification unread">
          <div class="user-img">
            <!-- <img src="" id="user1"> -->
            <i class="bi bi-person"></i>
          </div>
          <div class="msg">
            <a href="#">
              <p class="message">User 1 sent you a message</p>
              <p class="timestamp">5 minutes ago</p>
            </a>
          </div>
        </li>

        <li class="notification">
          <div class="user-img">
            <!-- <img src="" id="user1"> -->
            <i class="bi bi-person"></i>
          </div>
          <div class="msg">
            <a href="#">
              <p class="message">User 2 updated file.css</p>
              <p class="timestamp">3 hours ago</p>
            </a>
          </div>
        </li>

      </ul>
    </li>

    <li class="dropdown" id="apps">
      <i class="dropdown-toggle bi bi-grid-3x3-gap-fill" role="button" data-bs-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-end">
        <li class="toolbar-title">Apps</li>
        <ul id="apps-container">
          <li class="apps-link">
            <a href="#">
              <img src="">
              <span>App 1</span>
            </a>
          </li>

          <li class="apps-link">
            <a href="#">
              <img src="">
              <span>App 2</span>
            </a>
          </li>

          <li class="apps-link">
            <a href="#">
              <img src="">
              <span>App 3</span>
            </a>
          </li>

          <li class="apps-link">
            <a href="#">
              <img src="">
              <span>App 4</span>
            </a>
          </li>

          <li class="apps-link">
            <a href="#">
              <img src="">
              <span>App 5</span>
            </a>
          </li>

          <li class="apps-link">
            <a href="#">
              <img src="">
              <span>App 6</span>
            </a>
          </li>
        </ul>
      </ul>
    </li>

    <li class="dropdown" id="settings">
      <i class="dropdown-toggle bi bi-gear-fill" role="button" data-bs-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-end">
        <li class="toolbar-title">Settings</li>
        <li class="form-check form-switch">
          <input class="form-check-input switch_mode" type="checkbox">
          <label class="form-check-label" for="flexSwitchCheckDefault">Toggle dark mode</label>
        </li>
        <li>
          <a href="#">Preferences</a>
        </li>
      </ul>
    </li>

  </ul>

</tal:toolbar_top>
