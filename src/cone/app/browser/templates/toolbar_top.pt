<tal:toolbar_top xmlns:tal="http://xml.zope.org/namespaces/tal"
                 xmlns:ajax="http://namesspaces.bluedynamics.eu/ajax"
                 omit-tag="True">

  <ul id="toolbar-top">
      <li class="topnav-element">

        <a class="toolbar-link">
          <img src="static/images/flags/gb.svg" height="15em">
        </a>

        <div class="dropdown-menu-custom" id="language">
          
          <span>Language</span>
          <ul class="list-unstyled">
          <li><a href="#">
              <img src="static/images/flags/fr.svg" height="15em">
              <p class="d-none d-md-inline-block">French</p>
            </a>
          </li>

          <li><a href="#">
              <img src="static/images/flags/de.svg" height="15em">
              <p class="d-none d-md-inline-block">German</p>
            </a>
          </li>

          <li><a href="#">
              <img src="static/images/flags/it.svg" height="15em">
              <p class="d-none d-md-inline-block">Italian</p>
            </a>
          </li>
          </ul>
        </div>

      </li>

      <li class="topnav-element">
        <a class="toolbar-link">
          <i class="bi-bell-fill"></i>

          <div class="noti-badge-round">
            <span>9+</span>
          </div>
        </a>

        <div class="dropdown-menu-custom" id="notifications">
          <span>Notifications</span>

          <a href="#" id="msg1" class="msg unread">
            <div class="unread-dot">
            </div>

            <div class="user-msg">
              <!-- <img src="" id="user1"> -->
              <i class="bi bi-person"></i>
            </div>
            
            <div class="message">
              <span>User 1 sent you a message</span>
              <span>5 minutes ago</span>
            </div>

          </a>

          <a href="#" class="msg unread" id="2">
            <div class="user-msg">
              <!-- <img src="" id="user1"> -->
              <i class="bi bi-person"></i>
            </div>

            <div class="message">
              <span>User 2 updated file.css</span>
              <span>3 hours ago</span>
            </div>
          </a>

        </div>
      </li>

      <li class=" topnav-element">

        <a class="toolbar-link">
          <i class="bi-grid-3x3-gap-fill"></i>
        </a>

        <div class="dropdown-menu-custom" id="apps">
          <span>Apps</span>
          <div class="row">

            <div class="col">
              <a href="#">
                <div class="apps-link">
                  <img src="">
                  <span>App 1</span>
                </div>
              </a>
            </div>

            <div class="col">
              <a href="#">
                <div class="apps-link">
                  <img src="">
                  <span>App 2</span>
                </div>
              </a>
            </div>

            <div class="col">
              <a href="#">
                <div class="apps-link">
                  <img src="">
                  <span>App 3</span>
                </div>
              </a>
            </div>

          </div>

          <div class="row">

            <div class="col">
              <a href="#">
                <div class="apps-link">
                  <img src="">
                  <span>App 4</span>
                </div>
              </a>
            </div>

            <div class="col">
              <a href="#">
                <div class="apps-link">
                  <img src="">
                  <span>App 5</span>
                </div>
              </a>
            </div>

            <div class="col">
              <a href="#">
                <div class="apps-link">
                  <img src="">
                  <span>App 6</span>
                </div>
              </a>
            </div>

          </div>

        </div>
      </li>

      <li class=" topnav-element">
        <a class="toolbar-link">
          <i class="bi-gear-fill"></i>
        </a>

        <div class="dropdown-menu-custom" id="settings">
          <span>Settings</span>

            <div class="form-check form-switch">
              <input class="form-check-input switch_mode" type="checkbox" id="toggleMode">
              <label class="form-check-label" for="flexSwitchCheckDefault">Toggle dark mode</label>
            </div>

            <a href="#">Preferences</a>

        </div>

      </li>

    </ul>

</tal:toolbar_top>
